<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EnterActivity" >

    <TextView
        android:id="@+id/tvEnterSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/tv_enter_side" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEnterSide"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/cornerLU"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cornerCU"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cornerRU"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/cornerLC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cornerCC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cornerRC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/cornerLD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cornerCD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cornerRD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <FrameLayout
                android:id="@+id/whiteTile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/white_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/blueTile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blue_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/redTile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_tile" >
            </FrameLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/yellowTile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/yellow_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/greenTile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/green_tile" >
            </FrameLayout>

            <FrameLayout
                android:id="@+id/orangeTile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/orange_tile" >
            </FrameLayout>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/submit_button" />

</RelativeLayout>